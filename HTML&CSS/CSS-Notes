-- to style tag use name of tag 
<style>

h2 { color : blue; }
</style>
-- to style by class use . class name
<style>
  .unorder {color : red; }
</style>

-- to change to size of fort use
<style>
  .unorder{font-size: 10px}
</style>

-- to changes size of images
<style>
  .unorder{width : 100px}
 </style>
 
 -- to add border on the text/imges
 <style>
    .unorder
    {
      border-color : red;
      border-width : 5px;
      border-style : solid;
    
    }
 </style>
 
 -- to change the border edges to round 
 <style>
      border-color : red;
      border-width : 5px;
      border-style : solid;
      border-radios : 50%
 </style>
 
 --to style element by ID
  #unroder {
  color : blue;
  background-color : gray;
  }
  
  -- padding
  padding-top :10px
  padding-right : 20px
  padding-bottom : 20px
  padding-left : 10px
  
  -- another way to add padding
  
  padding 10px 20px 20px 10px {top,right,bottom,left}
  
  --to add margin
  margin 10px 20px 20px 10px {top,right,bottom,left}
 
