#########################################

if else Statement 
    ex - 
        
N1 = float(input("enter the first value")) 
O = input("Enter the operator: ")
N2 = float(input("enter the second value"))

if O == '+':
    print(N1+N2)
elif O == '-':
    print(N1+N2)
elif O == '/':
    print(N1+N2)
elif O == '*':
    print(N1+N2)
else:
    print("invalid")
    
